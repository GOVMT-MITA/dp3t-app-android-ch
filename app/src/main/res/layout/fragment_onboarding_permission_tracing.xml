<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/illustration_height"
            android:layout_marginBottom="@dimen/spacing_medium_large"
            android:scaleType="fitCenter"
            android:src="@drawable/ill_onboarding_gapple" />

        <TextView
            android:id="@+id/onboarding_title"
            style="@style/NextStep.Text.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium_large"
            android:gravity="center_horizontal"
            android:text="@string/onboarding_tracing_title" />

        <TextView
            android:id="@+id/onboarding_description"
            style="@style/NextStep.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:breakStrategy="high_quality"
            android:gravity="center_horizontal"
            android:hyphenationFrequency="full"
            android:paddingStart="@dimen/spacing_huge"
            android:paddingEnd="@dimen/spacing_huge"
            android:text="@string/onboarding_tracing_text_android" />

        <Button
            android:id="@+id/onboarding_tracing_button"
            style="@style/NextStep.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@string/onboarding_tracing_button_activate" />

        <Button
            android:id="@+id/onboarding_tracing_continue_button"
            style="@style/NextStep.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@string/onboarding_continue_button"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@color/grey_light"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_medium_large"
            android:paddingEnd="@dimen/spacing_large"
            android:paddingBottom="@dimen/spacing_medium_large">

            <TextView
                style="@style/NextStep.Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/onboarding_good_to_know" />

            <TextView
                style="@style/NextStep.Text.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/onboarding_tracing_info_title_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:layout_marginEnd="@dimen/spacing_medium"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/blue_main" />

                <TextView
                    style="@style/NextStep.Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:breakStrategy="high_quality"
                    android:hyphenationFrequency="full"
                    android:text="@string/onboarding_tracing_info_text_1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>