<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center_vertical"
			android:paddingStart="@dimen/spacing_large"
			android:paddingEnd="@dimen/spacing_large">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="@dimen/illustration_height"
				android:layout_marginBottom="@dimen/spacing_medium_large"
				android:scaleType="fitCenter"
				android:src="@drawable/ill_danke" />

			<TextView
				style="@style/NextStep.Text.Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/spacing_medium_large"
				android:gravity="center_horizontal"
				android:text="@string/inform_send_thankyou" />

			<TextView
				style="@style/NextStep.Text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:breakStrategy="high_quality"
				android:hyphenationFrequency="full"
				android:gravity="center_horizontal"
				android:text="@string/inform_send_thankyou_text" />

		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:paddingStart="@dimen/spacing_large"
		android:paddingEnd="@dimen/spacing_large"
		android:paddingBottom="@dimen/spacing_medium">
		<Button
			android:id="@+id/inform_thank_you_button_continue"
			style="@style/NextStep.Button.Purple"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/inform_continue_button" />
	</LinearLayout>
</LinearLayout>